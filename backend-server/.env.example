# JobSwitch.ai Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME=JobSwitch.ai
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database Settings
DATABASE_URL=sqlite:///./jobswitch.db
# For PostgreSQL: postgresql://user:password@localhost/jobswitch
# For MySQL: mysql://user:password@localhost/jobswitch
SQL_DEBUG=false

# Security Settings
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]
CORS_ALLOW_CREDENTIALS=true

# WatsonX.ai Settings
WATSONX_API_KEY=your-watsonx-api-key
WATSONX_BASE_URL=https://us-south.ml.cloud.ibm.com
WATSONX_PROJECT_ID=your-project-id

# WatsonX Orchestrate Settings
WATSONX_ORCHESTRATE_API_KEY=your-orchestrate-api-key
WATSONX_ORCHESTRATE_BASE_URL=https://orchestrate.watson.ai

# LangChain Settings
LANGCHAIN_VERBOSE=false
LANGCHAIN_CACHE_ENABLED=true

# External API Keys
LINKEDIN_API_KEY=your-linkedin-api-key
INDEED_API_KEY=your-indeed-api-key
GLASSDOOR_API_KEY=your-glassdoor-api-key
ANGELLIST_API_KEY=your-angellist-api-key

# Redis Settings (for caching)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Agent Settings
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT_SECONDS=300
TASK_QUEUE_SIZE=1000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60