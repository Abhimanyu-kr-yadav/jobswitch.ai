# Production Environment Configuration for JobSwitch.ai

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://jobswitch_user:secure_password@db:5432/jobswitch_prod
POSTGRES_DB=jobswitch_prod
POSTGRES_USER=jobswitch_user
POSTGRES_PASSWORD=secure_password

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Security
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# WatsonX.ai Configuration
WATSONX_API_KEY=your-watsonx-api-key
WATSONX_PROJECT_ID=your-watsonx-project-id
WATSONX_URL=https://us-south.ml.cloud.ibm.com

# Job Board API Keys
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
INDEED_API_KEY=your-indeed-api-key
GLASSDOOR_API_KEY=your-glassdoor-api-key
ANGELLIST_API_KEY=your-angellist-api-key

# Email Configuration
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@jobswitch.ai

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn
GRAFANA_PASSWORD=secure-grafana-password

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
AUTH_RATE_LIMIT_PER_MINUTE=10

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# Cache Settings
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=512

# External API Timeouts
API_TIMEOUT_SECONDS=30
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_FACTOR=2

# Security Headers
CORS_ORIGINS=https://jobswitch.ai,https://www.jobswitch.ai
CORS_ALLOW_CREDENTIALS=true

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=jobswitch-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Performance Tuning
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65
CLIENT_MAX_BODY_SIZE=10M

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_A_B_TESTING=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_MOBILE_API=true

# Third-party Integrations
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret
MIXPANEL_TOKEN=your-mixpanel-token
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX